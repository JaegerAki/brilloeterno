{# filepath: templates/cart/checkout.twig #}
{% extends "layout.twig" %}

{% block content %}
    <h1>Pago</h1>
    {% if cart is not empty %}
        <ul>
            {% for productId, quantity in cart %}
                <li>
                    Product ID: {{ productId }} - Quantity: {{ quantity }}
                </li>
            {% endfor %}
        </ul>
        <form method="post" action="{{basePath}}/cart/confirm">
            <button type="submit">Confirmar pago</button>
        </form>
    {% else %}
        <p>Tu carrito está vacío.</p>
    {% endif %}
{% endblock %}