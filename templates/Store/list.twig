{% extends "layout.twig" %}

{% block content %}
	<h1 class="mb-4 text-right">Tienda</h1>
	<div class="container">
		{% if store is not empty %}
			<div class="row row-cols-1 row-cols-md-3 g-4">
				{% for storeItem in store %}
					<a href="{{ basePath }}/store/{{ storeItem.product.id }}" class="text-decoration-none text-dark">
						<div class="col">
							<div class="card h-100 shadow-sm ">

								{% if storeItem.product.picture is not empty %}
									<img src="{{ picturePath }}/{{ storeItem.product.picture }}" class="card-img-top" alt="{{ storeItem.product.name }}" style="height: 400px; object-fit: cover;">
								{% else %}
									<img src="{{ basePath }}/public/assets/img/no_image.jpg" class="card-img-top" alt="Default Image" style="height: 400px; object-fit: cover;">
								{% endif %}
								<div class="card-body d-flex flex-column">
									<h5 class="card-title">{{ storeItem.product.name }}</h5>
									<p class="card-text">{{ storeItem.product.description }}</p>

									<div class="mt-auto w-100">
										<div class="d-flex justify-content-end align-items-center mt-3" style="gap: 0.5rem;">
											<div class="me-auto">
												<p class="fw-bold text-primary mb-0">PEN
													{{ storeItem.product.price }}</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>
		{% else %}
			<div class="alert alert-info text-center" role="alert">
				No hay productos disponibles.
			</div>
		{% endif %}
	</div>
{% endblock %}
